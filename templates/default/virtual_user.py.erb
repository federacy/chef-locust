class UserBehavior(TaskSet):

    def on_start(self):
        """ on_start is called when a Locust start before any task is scheduled """
        self.user_agents = USER_AGENTS

    <% @params['uri_list'].each do |item| %>
    @task(<%= item['weight'] -%>)
    def page_<%= item['identifier'].gsub!('-','_') -%>(self):
        self.headers = {"User-Agent":self.user_agents[random.randint(0,len(self.user_agents)-1)]}
        self.client.headers = self.headers
        self.client.get("<%= item['uri'] -%>")
        
    <% end %>

class WebsiteUser(HttpLocust):

    host="http://<%= @params['base_url'] %>"
    task_set = UserBehavior
    # Wait times in milliseconds
    min_wait=<%= @params['min_wait_time'] %>
    max_wait=<%= @params['min_wait_time'] %> 
